<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arnold.partyfi" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.arnold.partyfi.MainActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.arnold.partyfi.Friends_Main"
            android:theme="@style/Theme.AppCompat.Light"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.arnold.partyfi.Groups_Main"
            android:theme="@style/Theme.AppCompat.Light"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.arnold.partyfi.Parties_Main"
            android:theme="@style/Theme.AppCompat.Light"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
